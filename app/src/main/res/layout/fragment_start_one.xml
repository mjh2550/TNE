<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kotlin.bio.fragment.StartOneFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btnScanFrag"
            android:id="@+id/btnScanFrag"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btnStartFrag"
            android:id="@+id/btnStartFrag"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btnStopFrag"
            android:id="@+id/btnStopFrag"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btnDisconnectFrag"
            android:id="@+id/btnDisconnectFrag"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_device_list"
            android:textStyle="bold|italic" />

        <ListView
            android:id="@+id/lv_fragDeviceList"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scrollbars="vertical">

        </ListView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_log"
            android:textStyle="bold|italic" />


        <TextView
            android:id="@+id/tv_fragLogTextView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:scrollbars="vertical"
            android:gravity="bottom" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>